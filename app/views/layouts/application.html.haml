!!!Doctype
%html
  %head
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
  %body
    .container
      .row
        .span12
          %h1
            = link_to 'GottaDoIt', root_url
      .row
        .span3
          %ul
            %li= link_to 'Tasks', tasks_path
            %li= link_to 'Incomplete Tasks', incomplete_tasks_path
            %li= link_to 'Completed Tasks', complete_tasks_path
            %li= link_to 'New task', new_task_path

        .span9
          .flash
            - if flash[:notice]
              %p.notice=flash[:notice]
            - if flash[:alert]
              %p.alert=flash[:alert]
            
          = yield